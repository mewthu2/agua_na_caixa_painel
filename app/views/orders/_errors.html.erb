<% if order.errors.any? %>
  <div class="alert alert-warning mt-3" id="error_explanation">
    <h2><%= pluralize(order.errors.count, "erro") %> impedem que este pedido seja salvo:</h2>
    <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %><button type="button" class="btn-close" style="float:right; margin-top: -18px;" data-bs-dismiss="alert" aria-hidden="true"></button></li>
      <% end %>
    </ul>
  </div>
<% end %>