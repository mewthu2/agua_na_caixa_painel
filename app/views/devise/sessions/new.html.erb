<div class="login">
  <div class="main">
    <div class="d1"></div>
    <div class="d2"></div>
    <div class="d3"></div>
    <div class="d4"></div>
  </div>
  <div class="row d-flex justify-content-center" style="z-index: 99999; position: relative;">
    <div class="col-10 col-sm-4 col-md-4 col-lg-4 mt-4 mb-4">
      
    </div>
    <h2 class="d-flex justify-content-center" style="color: lightblue;">Acompanhamento de pedidos</h2>
  </div>
  <div class="row d-flex justify-content-center" style="z-index: 99999; position: relative;">
    <div class="col-12 col-sm-4 col-md-4 col-lg-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label 'Seu e-mail:' %><br />
          <div class="input-group">
            <div class="input-group-text"><i class="fas fa-envelope"></i></div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>
        </div>

        <div class="field">
          <%= f.label 'Sua senha:' %><br />
          <div class="input-group">
            <div class="input-group-text"><i class="fas fa-lock"></i></div>
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Logar", class: 'btn btn-primary w-100' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
